<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<div class="container" style="margin-top:5rem;width:60%;">
    <h2>Create New Blog</h2>

    <form method="POST" action="/blogs">
        <div class="mb-3">
            <label for="name" class="form-label">Title</label>
            <input type="text" class="form-control" id="name" name="blog[title]" placeholder="Blog Title">

        </div>
        <div class="mb-3">
            <label for="author" class="form-label">Author Name</label>
            <input type="text" class="form-control" id="author" name="blog[author]" placeholder="Name of the author">

        </div>
        <div class="mb-3">
            <label for="desc" class="form-label">Description</label>
            <textarea class="form-control" name="blog[desc]" id="desc" cols="30" rows="5"></textarea>
        </div>

        <button type="submit" class="btn" style="background-color: #355070;color: white;">Save</button>
    </form>
</div>




