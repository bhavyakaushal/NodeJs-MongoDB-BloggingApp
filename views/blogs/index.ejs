<%- include("../partials/header") %>
<%- include("../partials/navbar") %>





<div class="container blogs">

  <section>

    <h2>Welcome to your space , Bhavya!</h2>

  </section>

  <div class="row">

    <%for(let blog of blogs){%>
       
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="card">
        <div class="card-header" style="background-color: #e9c46a;"><h4> <%= blog.title %></h4>
           
          </div>
        <div class="card-body" >
          
          <p class="card-text"><%= blog.desc.substring(0,200) %></p>
          <h6 class="card-title">By-<i> <%= blog.author %></i></h6>
          <a href="/blogs/<%= blog._id %>"  class="btn"><i class="fas fa-eye"></i>View Blog</a>
        </div>
      </div>
    </div>
    <%}%>
     
    </div>



</div>


